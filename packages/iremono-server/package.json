{
  "name": "@iremono/server",
  "version": "1.0.0",
  "private": true,
  "main": "index.js",
  "type": "module",
  "license": "MIT",
  "scripts": {
    "start": "export $(cat .env.prod | grep -v \"#\" | xargs) && export NODE_ENV=production && node --experimental-specifier-resolution=node dist/index.js",
    "build": "tsc --build",
    "dev": "export $(cat .env.dev | grep -v \"#\" | xargs) && concurrently \"tsc --build --watch\" \"nodemon dist/index.js\""
  },
  "dependencies": {
    "@iremono/backend-core": "1.0.0",
    "@iremono/util": "1.0.0",
    "@types/cors": "^2.8.12",
    "busboy": "^1.4.0",
    "cors": "^2.8.5",
    "express": "^4.17.2",
    "sharp": "^0.30.1"
  },
  "devDependencies": {
    "@types/busboy": "^1.3.0",
    "@types/express": "^4.17.13",
    "@types/node": "^17.0.13",
    "@types/sharp": "^0.29.5",
    "concurrently": "^7.0.0",
    "nodemon": "^2.0.15",
    "typescript": "^4.5.5"
  },
  "nodemonConfig": {
    "delay": 1
  }
}
